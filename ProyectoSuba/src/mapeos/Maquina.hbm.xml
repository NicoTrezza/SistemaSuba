<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="datos.Maquina" table="Maquina">
		<id column="idMaquina" name="idMaquina">
			<generator class="identity"/>
		</id>
		<property name="tipo" column="tipo" type="int"/>
		
		<joined-subclass name="datos.MaquinaTren" table="MaquinaTren">
			<key column="idMaquina"/>
			<many-to-one name="estacion" class="datos.Estacion" column="idEstacion" not-null="true" fetch="join"/>			
		</joined-subclass>
		
		<joined-subclass name="datos.MaquinaColectivo" table="MaquinaColectivo">
			<key column="idMaquina"/>
			<property name="numInterno" column="numInterno" type="int"/>
			<many-to-one name="lineaColectivo" class="datos.LineaColectivo" column="idLineaColectivo" not-null="true"/>		
		</joined-subclass>
				
	</class>
</hibernate-mapping>